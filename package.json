{
  "name": "adventofcode2021",
  "version": "1.0.0",
  "main": "app/index.js",
  "scripts": {
    "build": "tsc",
    "execute": "node ./app/index.js",
    "format": "prettier --list-different .",
    "format-fix": "prettier --write .",
    "test": "jest",
    "buildTest": "yarn run build && yarn run test"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@types/jest": "^27.0.2",
    "babel-jest": "^27.3.1",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "typescript": "^4.5.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [ "./app/*"]
  },
  "prettier": {
    "arrowParens": "avoid",
    "endOfLine": "auto",
    "printWidth": 120,
    "quoteProps": "preserve",
    "tabWidth": 4,
    "trailingComma": "none",
    "overrides": [
      {
        "files": [
          "*.json",
          "*.jsonc",
          "*.yml"
        ],
        "options": {
          "tabWidth": 2
        }
      }
    ]
  },
  "wallaby": {
    "autoDetect": true
  }
}
