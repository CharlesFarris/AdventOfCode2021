{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true, // also enables "allowSyntheticDefaultImports": true; see https://www.typescriptlang.org/tsconfig/#esModuleInterop
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true, // reduces boilerplate generated by "esModuleInterop", see https://www.typescriptlang.org/tsconfig/#esModuleInterop
    "isolatedModules": true, // see https://vitejs.dev/guide/features.html#typescript-compiler-options
    "jsx": "react-jsx",
    "lib": ["ES2015", "DOM"],
    "module": "ES2015",
    "moduleResolution": "Node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true, // was not in vitejs template
    "noImplicitReturns": true, // was not in vitejs template
    "noUnusedLocals": true, // was not in vitejs template
    "noUnusedParameters": true, // was not in vitejs template
    "resolveJsonModule": true,
    "skipLibCheck": true, // was false in vitejs template
    "sourceMap": true,
    "strict": true,
    "target": "ES2015",
    "types": ["jest", "@testing-library/jest-dom"],
    "useDefineForClassFields": true // see https://vitejs.dev/guide/features.html#typescript-compiler-options
  },
  "include": ["./src"]
}
